<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Identificacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibtAddFront"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginVertical="50dp"
                    android:background="@drawable/ic_action_name"
                    android:onClick="openCamera"/>

                <ImageButton
                    android:id="@+id/ibtErFront"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="310dp"
                    android:layout_marginVertical="50dp"
                    android:background="@drawable/ic_action_elimina"
                    android:onClick="clickear"/>

                <ImageView
                    android:id="@+id/imvIneFront"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/ibtAddBack"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginVertical="160dp"
                    android:background="@drawable/ic_action_name"
                    android:onClick="openCamera"/>

                <ImageView
                    android:id="@+id/imvIneBack"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="150dp"
                    android:onClick="clickear"
                    android:src="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/ibtErBack"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="310dp"
                    android:layout_marginVertical="160dp"
                    android:background="@drawable/ic_action_elimina"
                    android:onClick="clickear"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginLeft="110dp"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/getSign"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginLeft="150dp"
                    android:text="Firmar"
                    android:onClick="clickear"
                    />

                <Button
                    android:id="@+id/btnContrato"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginLeft="150dp"
                    android:text="@string/btn_contrato"
                    android:onClick="clickear"
                    />


            </RelativeLayout>

    </ScrollView>


</LinearLayout>